{
  "expo": {
    "name": "Edvantage",
    "slug": "Edvantage",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "edvantagemobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": ["assets/**/*"],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#007AFF"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio", "fetch", "remote-notification"],
        "NSPhotoLibraryUsageDescription": "Allow access to select a profile picture."
      }
    },
    "android": {
      "permissions": [
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "android.permission.FOREGROUND_SERVICE",
        "INTERNET"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FAFBFD"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.akinoluwa.edvantage.dev"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#007AFF",
          "sounds": [],
          "iosDisplayInForeground": true,
          "androidMode": "default",
          "androidChannels": [
            {
              "id": "alarms",
              "name": "Alarms",
              "importance": "max",
              "sound": true,
              "vibrate": [0, 250, 250, 250]
            },
            {
              "id": "notifications",
              "name": "Notifications",
              "importance": "default",
              "sound": true,
              "vibrate": [0, 250]
            }
          ]
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FAFBFD"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://edvantage.com.ng/api",
      "router": {},
      "eas": {
        "projectId": "4cf1f793-a004-4afa-81bc-88ac2263abc4"
      }
    },
    "owner": "mikeyyy"
  }
}
